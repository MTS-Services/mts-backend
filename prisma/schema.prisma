generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env(process.env.DATABASE_URL_NAYEM)
}


// prisma/schema.prisma

model User {
  id    Int    @id @default(autoincrement()) // Auto-incrementing primary key
  name  String
  email String @unique // Ensure email is unique
}
